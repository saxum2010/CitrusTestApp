    -->
    <access origin="http://127.0.0.1*"/> <!-- allow local pages -->

    <access origin="http://citrus.ua/*" subdomains="true"/>
    <access origin="http://www.citrus.ua/*" subdomains="true"/>
    <access origin="http://cdn1.citrus.ua/*" subdomains="true"/>
